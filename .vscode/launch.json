{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest [Current File]",
            "program": "${workspaceFolder}/node_modules/.bin/jest",
            "cwd": "${workspaceFolder}",
            "args": ["${relativeFile}"],
            "console": "integratedTerminal",
            "address": "localhost",
            "port": 9229,
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
